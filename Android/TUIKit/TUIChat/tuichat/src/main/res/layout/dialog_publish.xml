<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:minHeight="200dp"
    android:layout_height="match_parent">


       <TextView
           android:layout_marginTop="16dp"
           android:layout_marginLeft="16dp"
           android:textColor="#999"
           android:text="情绪起风时，我是你的避风港"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            android:orientation="horizontal"
            android:id="@+id/lv_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/lv_feed"
                android:background="@drawable/bg_publish_question"
                android:layout_width="0dp"
                android:layout_height="100dp">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="发心情"
                    android:id="@+id/feed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/feed_title"
                    android:textSize="14dp"

                    android:textStyle="bold"
                    android:textColor="#70000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="心事的露珠，等待晨曦"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"
               />

            <RelativeLayout
                android:id="@+id/lv_question"
                android:layout_weight="1"
                android:background="@drawable/bg_publish_feed"
                android:layout_width="0dp"
                android:layout_height="100dp">
                <TextView
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:text="提问题"
                    android:id="@+id/question_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_below="@id/question_title"
                    android:textSize="14dp"

                    android:textStyle="bold"
                    android:textColor="#70000000"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="专业咨询师为你解答"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>



</LinearLayout>